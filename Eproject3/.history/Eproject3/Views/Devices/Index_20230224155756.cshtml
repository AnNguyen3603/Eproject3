@model List<Eproject3.Models.Device>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
        <div class="container-fluid">
            <a asp-action="Create">Create new Device</a>
            <div class="row">
                <table class="table table-bordered" id="deviceTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Device Names</th>
                            <th>Devices Type</th>
                            <th>SupplyFrom</th>
                            <th>Status</th>
                            <th>DateMaintance</th>
                            <th>Belong to</th>
                            <th>DeviceImg</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                          @foreach (var item in Model)
                            {
                              <tr>
                                <td>@item.DeviceName</td>  
                                <td>@item.DeviceType</td>  
                                <td>@item.Supplier.SupplierName</td>  
                                <td>@item.Status</td>  
                                <td>@item.DateMaintance</td>  
                                <td>@item.Labs.LabsName</td>  
                                <td>
                                  <img src="@item.DeviceImg" width="100px" height="100px" />
                                </td>  
                                <td>
                                  <a asp-action="Details" asp-route-id="@item.DevicesId" class="btn btn-primary">Details</a>
                                  <a asp-action="EditDevices" asp-route-id="@item.DevicesId" class="btn btn-info">Edit</a>
                                  <a asp-action="DeleteDevice" asp-route-id="@item.DevicesId" class="btn btn-danger">Delete</a>
                                </td>
                              </tr>
                            }
                      
                    </tbody>
                
                </table>
                @* Table Hay card gì đó tự build *@
                
            </div>
        </div>
    </section>
</div>
@section script{
<script src="//cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
<script>
  $(document).ready(function() {
    $("#deviceTable").DataTable({
      "ajax":{
        "url":"/Devices",
        "type": "GET",
        "dataType":"json"
        },
        "colums":{
          
        }
    })
  })
</script>
}