@model Eproject3.Models.Complain
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">

    <div class="container">
        <h1>Create</h1>
        <h4>COMPLAIN</h4>
        <hr />
